<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginBottom="10dp"
        android:background="@color/gray2">
    <ImageView
        android:id="@+id/json_listview_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/json_hotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/json_listview_img"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:text="酒店"
        android:textColor="@color/black_overlay"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/json_youhui"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/json_listview_img"
        android:layout_below="@id/json_hotel"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:text="优惠"
        android:textColor="@color/red1"
        android:textSize="22sp"/>
    <TextView
        android:id="@+id/json_location"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/json_listview_img"
        android:layout_below="@id/json_youhui"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:text="地址"/>
    <ImageView
        android:id="@+id/json_tuan"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/near_group"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>
    <ImageView
        android:id="@+id/json_card"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/near_card"
        android:layout_toLeftOf="@id/json_tuan"
        android:layout_marginTop="10dp"
        android:layout_marginRight="3dp"/>
    <ImageView
        android:id="@+id/json_ticket"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/near_ticket"
        android:layout_toLeftOf="@id/json_card"
        android:layout_marginTop="10dp"
        android:layout_marginRight="3dp"/>
    <ImageView
        android:id="@+id/json_infomap"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/info_map"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="45dp"/>
    <TextView
        android:id="@+id/json_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="11dp"
        android:text="202m"/>

    </RelativeLayout>
</RelativeLayout>