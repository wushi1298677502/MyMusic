<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.scxh.giveme.MyFragment.PocketFragment">

    <RelativeLayout
        android:id="@+id/pocket_top"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:layout_alignParentTop="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:src="@drawable/pocket_logo"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/pocket_logo"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/pocket_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/pocket_top"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/pocket_notuse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="未使用"
            android:gravity="center"
            android:background="@drawable/pocket"
            android:clickable="true"/>
        <TextView
            android:id="@+id/pocket_used"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="已使用"
            android:gravity="center"
            android:background="@drawable/pocket"
            android:clickable="true"/>
        <TextView
            android:id="@+id/pocket_outdate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="已过期"
            android:gravity="center"
            android:background="@drawable/pocket"
            android:clickable="true"/>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/pocket_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pocket_linearlayout"/>
</RelativeLayout>
