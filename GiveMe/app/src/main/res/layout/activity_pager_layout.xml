<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.scxh.giveme.PagerActivity">


        <LinearLayout
            android:id="@+id/pageractivity_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray2">
            <LinearLayout
                android:id="@+id/tabfragment_one"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/tabfragment_one_img"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/tab_near"/>
                <TextView
                    android:id="@+id/tabfragment_one_tex"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="附近"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tabfragment_two"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/tabfragment_two_img"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/tab_cheap"/>
                <TextView
                    android:id="@+id/tabfragment_two_tex"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="找便宜"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tabfragment_three"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/tabfragment_three_img"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/tab_favor"/>
                <TextView
                    android:id="@+id/tabfragment_three_tex"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="特惠"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tabfragment_finance"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/tabfragment_finance_img"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/tab_pocket"/>
                <TextView
                    android:id="@+id/tabfragment_finance_tex"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="口袋"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tabfragment_more"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/tabfragment_more_img"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/tab_more"/>
                <TextView
                    android:id="@+id/tabfragment_more_tex"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="更多"
                    android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/tabfragment_framlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/pageractivity_linearlayout"/>
</RelativeLayout>

